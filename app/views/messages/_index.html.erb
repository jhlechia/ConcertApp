<div class="messages-index">
<%- model_class = Message -%>
<div class="page-header">
  <h1 class="messages_title">Message Board</h1>
  <center><button type="button" class="btn btn-md btn-primary" id="myBtn">Add a Message</button></center>
</div>
<div class="table-container">
<table class="table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:body) %></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.body, message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div id="user-modal" class="modal fade"></div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal">&times;</button>

      <%= form_for @message, :html => { :class => "form-horizontal event" } do |f| %>


        <div class="form-group">
          <%= f.label "Your Message:", :class => 'control-label col-lg-2' %>
          <div class="col-lg-10">
            <%= f.text_area :body, rows: 7, :class => 'form-control' %>
            <%= f.text_field :concert_id, value: params[:format] %>
            <%= f.text_field :carpool, value: "true" %>
          </div>
          <%=f.error_span(:description) %>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit 'Submit', :class => 'btn btn-primary' %>
            <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                      user_messages_path, :class => 'btn btn-default' %>
          </div>
        </div>

      <% end %>

    </div>

  </div>
</div>
</div>
