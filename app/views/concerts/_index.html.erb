<div class="concert-index">
<%- model_class = Concert -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:artist) %></th>
      <th><%= model_class.human_attribute_name(:venue) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
    </tr>
  </thead>
  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
          <div onclick="location.href='<%= concert_path(concert) %>'">
          <td><%= concert.artist %></td>
          <td><%= concert.venue %></td>
          <td><%= concert.date.strftime("%A, %b %d at %I %p").downcase %></td>
          </div>
          <% unless @hide_going_button %>
          <td><%= link_to 'Going', user_path(@user), class: 'btn btn-default btn-xs' %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
