<div class="event-container">
<%- model_class = Event -%>

<div class="current-concert text-center">
  <ul>
    <li><h4><%= @concert.artist %></h4></li>
    <li><th><h4><%= @concert.venue %></li>
    <li><h4><%= @concert.date.strftime("%A, %b %d") %></h4></li>
    </ul>
  </div>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="event-show-info">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @event.time.strftime("%A, %b %d at %I %p")%></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @event.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @event.description %></dd>
</dl>
</div>

<%= render 'messages/index'%>
</div>
