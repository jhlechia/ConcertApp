<%- model_class = Message -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.body, message_path(message) %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_message_path(message), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        message_path(message),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-md btn-primary" id="myBtn">Add a post</button>

<div id="user-modal" class="modal fade"></div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <%#= form_for [params[:id], params[:format] ,@message],  url: {action: "create", controller:"messages"}, html: { multipart: true, class:"form-horizontal user" } do |f| %>



      <%= form_for @message, url: {controller:'messages', action:'create'}, html: { multipart: true, class:"form-horizontal user" } do |f| %>





        <div class="form-group">
          <%= f.label "Your Message:", :class => 'control-label col-lg-2' %>
          <div class="col-lg-10">
            <%= f.text_area :body, class: 'form-control', rows: 10 %>
            <%= f.text_field :user_id, value: current_user.id %>
            <%= f.text_field :event_id, value: params[:format] %>
          </div>

          <%=f.error_span(:body) %>
        </div>

        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">

            <%= f.submit "Post", :class => 'btn btn-primary modal-close'%>

        </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
